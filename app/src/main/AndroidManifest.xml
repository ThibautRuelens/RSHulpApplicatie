<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thibaut.rshulpapplicatie">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in activity_loginogin form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rs_icon"
        android:label="Runescape Help Application"
        android:roundIcon="@mipmap/rs_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AndroidDatabaseManager" />
        <activity android:name=".HighscoreOSRSActivity" />
        <activity android:name=".HighscoreRS3Activity" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_osrshighscore"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".GEOSRSActivity" />
        <activity android:name=".GERS3Activity" />
        <activity android:name=".MoneyOSRSActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MoneyRS3Activity"></activity>
    </application>

</manifest>