<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thibaut.rshulpapplicatie.MoneyRS3Activity"
    android:id="@+id/roooot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/first_fragment"
            android:name="com.example.thibaut.rshulpapplicatie.FirstFragment"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            tools:layout="@layout/fragment_first" />

        <fragment
            android:id="@+id/second_fragment"
            android:name="com.example.thibaut.rshulpapplicatie.SecondFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_second" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>